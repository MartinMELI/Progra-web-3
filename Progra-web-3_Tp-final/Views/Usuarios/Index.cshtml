@model List<Progra_web_3_Tp_final.Models.Usuario>
@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/usuarios.css" />
<script src="~/js/usuarios.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>

<div class="text-center">
    <div class="usuarios-filters mb-4">
        <input type="text" class="form-control col-lg-3" id="buscar_nombre" placeholder="Nombre usuario">
        <input type="text" class="form-control col-lg-3" id="buscar_email" placeholder="Email">
        <div class="form-group form-check col-lg-3">
            <label class="form-check-label col-lg-9" for="excluir_eliminados">Excluir eliminados</label>
            <input type="checkbox" class="form-check-input" id="excluir_eliminados">
        </div>

        <form action="../../Usuarios/NuevoUsuario" method="post">
            <button type="submit" class="btn btn-success">Nuevo Usuario</button>
        </form>

</div>
    <div>
        <table id="tabla_usuarios" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Fecha Último Login</th>
                    <th>Ver</th>
                    <th>Editar</th>
                </tr>
            </thead>

            <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Nombre</td>
                    <td>@user.Email</td>
                    <td>@user.FechaUltLogin</td>
                    <td><a href="">Ver</a></td>
                    <td><a href="../../Usuarios/EditarUsuario">Editar</a></td>
                </tr>
            }
            </tbody>
            <tfoot>
            </tfoot>
        </table>
    </div>
</div>
