@model Progra_web_3_Tp_final.Models.Articulo;
@{
    ViewData["Title"] = "Home Page";
}
<script src="~/js/articulos.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="mt-4">

    <form action="../../Articulos/EditarArticulo" method="post">
        <input type="hidden" name="IdArticulo" value="@Model.IdArticulo" />
        <div>
            <input type="text" class="form-control col-lg-3 mb-2" id="cod_art" name="Codigo" placeholder="Código" required value="@Model.Codigo">
            <input type="text" class="form-control col-lg-3" id="descrip_art" name="Descripcion" placeholder="Descripción" required value="@Model.Descripcion">
        </div>

        <button type="submit" class="btn btn-success mt-2" onclick="editar()">Modificar</button>
    </form>


    <div class="text-center mt-2 d-flex">
            <form action="../../Articulos" method="post">
                <button type="submit" class="btn btn-danger">Cancelar</button>
            </form> 
    </div>
</div>
